	public static String FindPostalCode (String adresse){
		
		
		if(adresse != null && !"".equals(adresse)){
		
			String zipCode ="";
		
			Pattern zipPattern = Pattern.compile("(\\d{5})");
			Matcher zipMatcher = zipPattern.matcher(adresse);
			if (zipMatcher.find()) {
				zipCode = zipMatcher.group(1);
				return zipCode;
			}
			
			return null;
		}
		
		return null;
	}
	
