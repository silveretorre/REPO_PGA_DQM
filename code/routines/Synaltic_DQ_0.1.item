 */
public static Boolean IsOldRegistration (String RN){
	
	if(RN != null && !"".equals(RN)){
		
		Pattern RNPattern = Pattern.compile("^([0-9]{1,4}{0,1})([A-Z]{1,3})({0,1}[0-9]{1,2}[A-Z0-9]{0,1})$");
		Matcher RNMatcher = RNPattern.matcher(RN);
		if (RNMatcher.find()) {
			return true;
		}
		
		return false;
	}
	
	return false;
}

